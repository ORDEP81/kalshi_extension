{
  "manifest_version": 3,
  "name": "Kalshi American Odds",
  "version": "1.0.1",
  "description": "Display American odds alongside Kalshi's probability percentages",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://kalshi.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://kalshi.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Kalshi American Odds Settings"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}